<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Set the default logging level to WARNING -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- Override logging level for specific packages if needed -->
    <!-- For example, to enable DEBUG logs for a specific package: -->
    <!-- <logger name="org.cqlsh.specific.package" level="DEBUG" /> -->
</configuration>